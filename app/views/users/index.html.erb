<h3>
  <div class="text-center">
    <%= controller_name.humanize + ":" %>
    <%= action_name.humanize %>
    <div class="badge badge-info">
      <%= @users.count %>
    </div>
  </div>
</h3>
<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover shadow">
    <thead>
      <tr>
        <th>id</th>
        <th>email</th>
        <th>image</th>
        <th>tenants</th>
        <th>current_tenant</th>
        <th>members_count</th>
        <th>identities</th>
        <th>confirmed</th>
        <th>superadmin</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td>
            <%= link_to user.id, user %>
          </td>
          <td>
            <%= user.email %>
          </td>
          <td>
            <% if user.image? %>
              <%= image_tag user.image, size: '20x20', alt: "#{user.email}", class: 'rounded-circle' %>
            <% end %>
          </td>
          <td>
            <%= user.tenants.compact.join(', ') %>
          </td>
          <td>
            <%= user.tenant_id %>
          </td>
          <td>
            <%= user.members_count %>
          </td>
          <td>
            <%= user.identities.pluck(:provider).join(", ") %>
          </td>
          <td><%= boolean_label(user.confirmed_at.present?) %></td>
          <td><%= boolean_label(user.superadmin) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<br/>
