<% model_class = User %>
<h3>
  <div class="text-center">
    <%= t "#{controller_name}_#{action_name}" %>
    <div class="badge badge-info">
      <%= @users.count %>
    </div>
  </div>
</h3>
<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover shadow">
    <thead>
      <tr>
        <th><%= model_class.human_attribute_name(:id).capitalize %></th>
        <th><%= model_class.human_attribute_name(:email).capitalize %></th>
        <th><%= model_class.human_attribute_name(:image).capitalize %></th>
        <th><%= model_class.human_attribute_name(:tenants).capitalize %></th>
        <th><%= model_class.human_attribute_name(:language).capitalize %></th>
        <th><%= model_class.human_attribute_name(:tenant).capitalize %></th>
        <th><%= model_class.human_attribute_name(:members_count).capitalize %></th>
        <th><%= model_class.human_attribute_name(:identities).capitalize %></th>
        <th><%= model_class.human_attribute_name(:confirmed_at).capitalize %></th>
        <th><%= model_class.human_attribute_name(:superadmin).capitalize %></th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td>
            <%= link_to user.id, user %>
          </td>
          <td>
            <%= user.email %>
          </td>
          <td>
            <% if user.image? %>
              <%= image_tag user.image, size: '20x20', alt: "#{user.email}", class: 'rounded-circle' %>
            <% end %>
          </td>
          <td>
            <%= user.tenants.compact.join(', ') %>
          </td>
          <td><%= user.language %></td>
          <td>
            <%= user.tenant_id %>
          </td>
          <td>
            <%= user.members_count %>
          </td>
          <td>
            <%= user.identities.pluck(:provider).join(", ") %>
          </td>
          <td><%= boolean_label(user.confirmed_at.present?) %></td>
          <td><%= boolean_label(user.superadmin) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<br/>
