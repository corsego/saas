<h3>
  <div class="text-center">
    <%= t "#{controller_name}_#{action_name}" %>
    <div class="badge badge-info">
      <%= @members.count %>
    </div>
  </div>
</h3>

<% if @current_member.admin? %>
  <% if current_tenant.can_invite_members? %>
    <%= form_tag invite_members_path, method: :get do %>
      <%= email_field_tag 'email' %>
      <%= submit_tag("Invite a member") %>
    <% end %>
  <% else %>
    <small>
      Tenants on 
      <div class="badge badge-info">
        solo
      </div>
      plan can not invite membes
    </small>
  <% end %>
<% else %>
  <small>
    Only admin can invite members
  </small>
<% end %>

<br>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover shadow">
    <thead>
      <tr>
        <th>id</th>
        <th>User</th>
        <th>Tenant id</th>
        <th>Tenant</th>
        <th>invitable</th>
        <th>roles</th>
        <th></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @members.each do |member| %>
        <tr>
          <td><%= link_to member.id, member %></td>
          <td><%= member.user %></td>
          <td><%= member.tenant.id %></td>
          <td><%= member.tenant %></td>
          <td>
            <% if member.user.created_by_invite? %>
                <span class="small">
                  invited by
                  <%= member.user.invited_by %>
                </span>
              <br/>
              <% if member.user.invitation_accepted_at.present? %>
                <span class="badge badge-success">
                  invitation accepted
                </span>
              <% else %>
                <%= link_to 'Resend invitation', resend_invitation_user_path(member.user), method: :patch %>
              <% end %>
            <% end %>
          </td>
          <td>
            <!--
            <%= member.roles %>
            <%= member.roles.class %>
            <%= member.admin? %>
            <%= member.viewer? %>
            <%= member.editor? %>
            -->
            <%= member.active_roles.join(", ") %>
          </td>
          <% if @current_member.admin? %>
            <td><%= link_to t(".edit", default: t("helpers.links.edit")).capitalize, edit_member_path(member) %></td>
            <td><%= link_to t(".destroy", default: t("helpers.links.destroy")).capitalize, member, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% else %>
            <td></td>
            <td></td>
          <% end %>
      <% end %>
    </tbody>
  </table>
</div>
<br/>
