<div class="card shadow">
  <div class="card-header">
    <h4>
      <strong>Name:</strong>
      <%= @tenant.name %>
    </h4>
  </div>
  <div class="card-body">
    <strong>Members:</strong>
    <%= @tenant.users.compact.join(', ') %>
    <br>
    <strong>Members count:</strong>
    <%= @tenant.members.count %>
    <br>
    <strong>Plan:</strong>
    <span class="badge badge-secondary">
      <%= @tenant.plan %>
    </span>
    <br>
    <strong>Logo:</strong>
    <% if @tenant.logo.attached? %>
      <%= image_tag @tenant.logo, size: "50x50" %>
    <% end %>
  </div>
  <div class="card-footer">
    <% if current_user.tenants.include?(@tenant) && Member.find_by(user: current_user, tenant: @tenant).admin? %>
      <%= link_to 'Edit', edit_tenant_path(@tenant) %>
    <% end %>
    <%= link_to 'Back', my_tenants_path %>
  </div>
</div>