<h3>
  <div class="text-center">
    Charges
    <div class="badge badge-info">
      <%= @charges.count %>
    </div>
  </div>
</h3>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover table-sm table-light shadow">
    <thead>
      <tr>
        <th>Tenant</th>
        <th>Subscription</th>
        <th>Metadata</th>
        <th colspan="1"></th>
      </tr>
    </thead>
  
    <tbody>
      <% @charges.each do |charge| %>
        <tr>
          <td><%= charge.tenant_id %></td>
          <td><%= charge.subscription_id %></td>
          <td><%= charge.metadata %></td>
          <td><%= link_to 'Show', charge %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<br>
