<div class="card shadow">
  <div class="card-header">
    <h4>
      <%= t("helpers.titles.edit").titleize %>
      <%= Plan.model_name.human.titleize %>
    </h4>
  </div>
  <div class="card-body">
    <%= render 'form', plan: @plan %>
  </div>
  <div class="card-footer">
    <%= link_to t(".show", default: t("helpers.links.show")).capitalize, @plan %> |
    <%= link_to t(".back", default: t("helpers.links.back")).capitalize, plans_path %>
  </div>
</div>