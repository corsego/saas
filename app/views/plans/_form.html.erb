
<%= simple_form_for(@plan) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :amount %>
    <%= f.input :currency, collection: [ "usd", "eur", "pln", "uah", "rub"], include_blank: false %>
    <%= f.input :interval, collection: Plan::INTERVALS, include_blank: false, as: :radio_buttons %>

    <%= f.input :max_members %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
