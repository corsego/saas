<% model_class = Plan %>
<h3>
  <div class="text-center">
    <%= t '.title', default: model_class.model_name.human.pluralize.titleize %>
    <div class="badge badge-info">
      <%= @plans.count %>
    </div>
  </div>
</h3>

<%= link_to new_plan_path, class: 'btn btn-info' do %>
  <i class="fas fa-plus"></i>
  <%= t("helpers.titles.new").titleize %>
  <%= model_class.model_name.human.titleize %>
<% end %>

<p>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover table-sm table-light shadow">
    <thead>
      <tr>
        <th><%= model_class.human_attribute_name(:name).capitalize %></th>
        <th><%= model_class.human_attribute_name(:amount).capitalize %></th>
        <th><%= model_class.human_attribute_name(:interval).capitalize %></th>
        <th><%= model_class.human_attribute_name(:max_members).capitalize %></th>
        <th><%= model_class.human_attribute_name(:subscriptions).capitalize %></th>
        <th colspan="2"></th>
      </tr>
    </thead>
  
    <tbody>
      <% @plans.each do |plan| %>
        <tr>
          <td><%= plan.name %></td>
          <td><%= number_to_currency(plan.amount/100, unit: plan.currency) %></td>
          <td><%= plan.interval %></td>
          <td><%= plan.max_members %></td>
          <td><%= plan.subscriptions.count %></td>
          <td><%= link_to t(".edit", default: t("helpers.links.edit")).capitalize, edit_plan_path(plan) %></td>
          <td><%= link_to t(".destroy", default: t("helpers.links.destroy")).capitalize, plan, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<br>
